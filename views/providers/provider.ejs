<section class="container-fluid container-fluid-custom pb-5 mb-5">
    <div class="row mt-5">
        <div class="col col-lg-6 d-flex mx-auto justify-content-between align-items-center">
          <h2>Provider <%= provider.name %> Info for <%#= profiles.name %>'s profile</h2>
  
          <button type="button" class="btn btn-danger me-2" data-bs-toggle="modal" id="deleteButton" data-bs-target="#deleteModal">
            Delete
          </button>
        </div>
      </div>
    </div>
  
    <div class="container-fluid container-fluid-custom pb-5 mb-5">
      <div class="row">
        <div class="col-lg-6 mx-auto">
            <form action="/providers/update/<%= provider._id %>" method="POST">
  
              <%- include('_form_fields')  %>
              
              <div class="d-flex btn-row justify-content-between pt-3">
                <a type="text" class="btn btn-secondary btn-lg" href="/providers">Cancel</a>  
                <button type="submit" class="btn btn-primary btn-lg">Update</button> 
              </div>
  
            </form>
        </div>
      </div>
    </div>   
  
  </section>
  
  <div class="modal fade" tabindex="-1" role="dialog" id="deleteModal">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">Delete this provider?</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
        <p>You are about to delete the provider information for <%= provider.name %>.<br/>
        Are you sure?</p>
      </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
  
          <form action="/providers/<%= provider._id %>?_method=DELETE" method="POST" class="position-relative">
            <button type="submit" class="btn btn-primary">Delete Provider</button>
          </form> 
  
        </div>
      </div>
    </div>
  </div>