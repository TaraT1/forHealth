<div class="container container-fluid container-fluid-custom pb-5 mb-5">
  <div class="row mb-4">
    <div class="col">
      <h1>Providers</h1>
    </div>

      <ul class="nav col-4 col-md-auto mb-2 justify-content-center mb-md-0">
        <li><a href="/dashboard" class="nav-link px-2 link-secondary">Home</a></li>
        <li><a href="/about" class="nav-link px-2 link-dark">About</a></li>
        <li><a href="/profiles" class="nav-link px-2 link-dark">Profiles</a></li>
        <li><a href="/providers/" class="nav-link px-2 link-dark">Providers</a></li>
        <li><a href="/notes" class="nav-link px-2 link-dark">Notes</a></li>
      </ul>

    <div class="col text-end">
      <a href="/providers/new" class="btn btn-primary">Add New Provider</a>
    </div>
  </div>

    <div class="container container-fluid container-fluid-custom"> 
      <div class="row">
        <% if(providers.length > 0) {
          for(let i = 0; i < providers.length; i++ ) { %>
            <div class="col-sm-4 mb-4">
                <div class="card border-primary" style="min-height: 60px">
                    <a href="/providers/<%= providers[i]._id %>" class="card-body text-decoration-none">
                        <h5 class="card-title"><%= providers[i].name %></h5>
                    </a>
                </div>
            </div>
        <% }} %>
      </div>
    </div>
</div>
