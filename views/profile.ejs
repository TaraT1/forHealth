<%- include('partials/header') -%>
<section class="container">
  <div class="row mt-5">
    <div class="col-6">
          <div>
              <p><strong>User Name</strong></p>
              <p><strong>Email</strong></p>
              <a href="/logout" class="col-3 btn btn-primary">Logout</a>
          </div>
          <section class="container mt-5">
            <h2>Health Profile for <%= profile.name %> </h2>
            <ul class="list-unstyled">
              <li> <%= profile.birthDate %> </li>
              <li> <%= profile.sex %> </li>
              <li> <%= profile.genderId %> </li>
              <li> <%= profile.geneticBackground %> </li>
              <li> <%= profile.eHealthRecords %> </li>
              <li> <%= profile.journal %> </li>
              <li> <%= profile.todo %> </li>
            </ul>
          </section>
            

          <section class="container mt-3">
            <div class="row">
              <div class="col">
                <h2>Health Profiles</h2>
                  <% for( let i=0; i < profiles.length; i++) {%>
                    <div class="card">
                        <a href="/profiles/<%= profiles[i]._id%>">
                          <h5 class="card-title"><%= profiles[i].name%></h5>
                        </a>
                    </div>
                  <% } %>
              </div>
            </div>
          </section>

      </div>
    </div>   
  </div>   
</section>

<%- include('partials/footer') -%>